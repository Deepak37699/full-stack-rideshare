# Production Environment Variables Template
# Copy this file to .env in production and set appropriate values

# SECURITY WARNING: Generate a new secret key for production!
# You can generate one using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-very-long-random-secret-key-here-minimum-50-characters-long

# Debug mode - MUST be False in production
DEBUG=False

# Allowed hosts - Add your domain names
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# SSL/HTTPS Security (Enable these in production with HTTPS)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Cookie Security (Enable these in production with HTTPS)
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Database Configuration (Example for PostgreSQL in production)
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Redis Configuration (if using Redis for caching/sessions)
# REDIS_URL=redis://localhost:6379/0

# Email Configuration (for notifications)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-email-password
# EMAIL_USE_TLS=True

# AWS S3 Configuration (if using S3 for media files)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Social Authentication (if using)
# GOOGLE_OAUTH2_KEY=your-google-key
# GOOGLE_OAUTH2_SECRET=your-google-secret
# FACEBOOK_KEY=your-facebook-key
# FACEBOOK_SECRET=your-facebook-secret

# Payment Gateway Configuration
# STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-key
# STRIPE_SECRET_KEY=sk_live_your-stripe-secret
# RAZORPAY_KEY_ID=your-razorpay-key
# RAZORPAY_KEY_SECRET=your-razorpay-secret

# Logging Configuration
# LOG_LEVEL=WARNING
# SENTRY_DSN=your-sentry-dsn-for-error-tracking
